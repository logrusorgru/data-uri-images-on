.content{
	position: relative;
	z-index: 99;
	margin: 2em auto;
	//display: table;
	width: 60%;
}

.comment{
	td{
		border-bottom: 1px dotted #333;
		padding-bottom: .5em;
		padding-top: .5em;
	}
}

.uname{
	background-color: #ccc;
	color: #333;
	padding: .2em 1em;
	border-radius: .2em;
	&:after{
		content: ':'
	}
}

textarea{
	resize: vertical;
	width: 90%;
	height: 5em;
}

input[type=text], textarea{
	border-radius: .2em;
	padding: .2em;
	font-size: 1.2em;
}

input[type=image]{
	height: 3em;
	width: 3em;
}

.clear_both{ clear: both; }

#comments{
		width: 100%;
		td:nth-of-type(1){ width: 20%; }
}

#invisible_field{
	position: fixed;
	top: -1000em;
}

.image_pack{
	width: 27em;
	img{
		height: 5em;
		width: 5em;
		padding: .2em
	}
}

@import 'scaffolds';
@import 'static';
